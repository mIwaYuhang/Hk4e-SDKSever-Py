  alert: false                          # 游戏内弹窗公告
  extra_remind: false                   # 额外提醒
Security:
  bcrypt_cost: 12
  token_length: 32
  min_password_len: 8 
Auth:
  enable_password_verify: false         # 启用密码验证
  enable_guest: false                   # 启用游客登录
Other:
  modified: false                       # 追踪对象或实体的变更状态或时间
  serviceworker: false                  # 启用分析
  new_register_page_enable: false
  kcp_enable: false
  enable_web_dpi: false
